<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B986CE"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/etMin"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="18dp"
        android:background="#DAE48FA7"
        android:ems="10"
        android:hint="min"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvColon"
        app:layout_constraintEnd_toStartOf="@+id/tvColon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvColon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="152dp"
        android:text=":"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvScreen"
        app:layout_constraintEnd_toStartOf="@+id/etSec"
        app:layout_constraintStart_toEndOf="@+id/etMin"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSec"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="391dp"
        android:background="#DD8CAC"
        android:ems="10"
        android:hint="sec"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPause"
        app:layout_constraintEnd_toStartOf="@+id/btnStart"
        app:layout_constraintStart_toEndOf="@+id/tvColon"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="151dp"
        android:background="#B253C4"
        android:text="Start"
        app:layout_constraintBottom_toTopOf="@+id/tvScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etSec"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScreen"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="296dp"
        android:background="#B885CD"
        android:padding="20dp"
        android:text="Timer"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvColon" />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="77dp"
        android:layout_height="0dp"
        android:layout_marginBottom="203dp"
        android:background="#B153C3"
        android:text="Pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSec" />

</android.support.constraint.ConstraintLayout>